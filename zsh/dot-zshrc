### Zinit

if [[ ! -f $HOME/.zinit/bin/zinit.zsh ]]; then
    print -P "%F{33}â–“â–’â–‘ %F{220}Installing %F{33}DHARMA%F{220} Initiative Plugin Manager (%F{33}zdharma/zinit%F{220})â€¦%f"
    command mkdir -p "$HOME/.zinit" && command chmod g-rwX "$HOME/.zinit"
    command git clone https://github.com/zdharma/zinit "$HOME/.zinit/bin" && \
        print -P "%F{33}â–“â–’â–‘ %F{34}Installation successful.%f%b" || \
        print -P "%F{160}â–“â–’â–‘ The clone has failed.%f%b"
fi

source "$HOME/.zinit/bin/zinit.zsh"
# plugins
zinit light denysdovhan/spaceship-prompt
zinit ice wait lucid; zinit light SukkaW/zsh-osx-autoproxy
zinit ice wait lucid; zinit light zdharma/fast-syntax-highlighting
zinit ice wait lucid atload"zicompinit;zicdreplay" blockf
zinit light zsh-users/zsh-completions
# directory snippets
zinit ice svn wait lucid; zinit snippet OMZ::plugins/pip
zinit ice svn wait lucid; zinit snippet OMZ::plugins/z
# single-file snippets
zinit for \
    OMZ::lib/completion.zsh \
	OMZ::lib/directories.zsh \
	OMZ::lib/key-bindings.zsh \
	OMZ::lib/theme-and-appearance.zsh
zinit ice wait lucid atload"alias cat=ccat; alias less=cless"; zinit snippet OMZ::plugins/colorize/colorize.plugin.zsh
zinit ice wait lucid; zinit snippet OMZ::plugins/colored-man-pages/colored-man-pages.plugin.zsh
zinit ice wait lucid; zinit snippet OMZ::plugins/extract/extract.plugin.zsh
zinit ice wait lucid; zinit snippet OMZ::plugins/git/git.plugin.zsh
zinit ice wait lucid; zinit snippet OMZ::plugins/pyenv/pyenv.plugin.zsh

### Zinit END
#
### User Configuration

## Colorize
ZSH_COLORIZE_STYLE=vim
ZSH_COLORIZE_TOOL=chroma
## Direnv
eval "$(direnv hook zsh)"
## Docker
zinit ice wait lucid as"completion"
zinit snippet https://github.com/docker/cli/blob/master/contrib/completion/zsh/_docker
zinit ice wait lucid as"completion"
zinit snippet https://github.com/docker/compose/blob/master/contrib/completion/zsh/_docker-compose
## Golang
export GOPATH="`(go env GOPATH)`"
export PATH="$GOPATH/bin:$PATH"
## N
export N_PREFIX="$HOME/.n"
export PATH="$N_PREFIX/bin:$PATH"
## NeoVim
alias vim="nvim"
## Poetry
export PATH="$HOME/.poetry/bin:$PATH"
## Rust
export PATH="$HOME/.cargo/bin:$PATH"
## Shorthands
alias cls="clear"
## Spaceship Prompt
SPACESHIP_PROMPT_ORDER=(
	user
	host
	dir
	git
	golang
	node
	pyenv
	rust
	line_sep
	jobs
	exit_code
	char
)
SPACESHIP_EXIT_CODE_SHOW=true
SPACESHIP_HOST_PREFIX="@ "
SPACESHIP_PROMPT_ADD_NEWLINE=false
SPACESHIP_RUST_SYMBOL="ðŸ¦€ "
SPACESHIP_USER_SHOW="always"

### User Configuration END


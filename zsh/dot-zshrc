### User Configuration

# colorize
#ZSH_COLORIZE_STYLE=native
ZSH_COLORIZE_TOOL=chroma
# n 
export N_PREFIX="$HOME/.n"
export PATH="$N_PREFIX/bin:$PATH"
# poetry
export PATH="$HOME/.poetry/bin:$PATH"
# pyenv
export PYENV_VIRTUALENV_DISABLE_PROMPT=1
# shorthands
alias cls="clear"
alias prch="proxychains"
if command -v stow &>/dev/null && `which stow` -V | grep 2.3 &>/dev/null; then
	alias stow="stow --dotfiles"
fi
# spaceship
SPACESHIP_PROMPT_ORDER=(
	user
	host
	dir
	git
	node
	golang
	pyenv
	line_sep
	jobs
	exit_code
	char
)
SPACESHIP_DIR_LOCK_SYMBOL=" ðŸ”’"
SPACESHIP_DIR_TRUNC=0
SPACESHIP_DIR_TRUNC_REPO=false
SPACESHIP_EXIT_CODE_SHOW=true
SPACESHIP_HOST_PREFIX="@ "
SPACESHIP_HOST_SHOW="always"
SPACESHIP_PROMPT_ADD_NEWLINE=false
SPACESHIP_USER_SHOW="always"
SPACESHIP_USER_COLOR_ROOT="yellow"
# wsl2 
if [[ $(grep microsoft /proc/version) ]]; then
	export HOST_IP=$(cat /etc/resolv.conf | tail -n 1 | sed -e "s/nameserver //g")
	alias e="explorer.exe"
	alias ed="explorer.exe ."
	alias prci="sudo sed -i \"$ s/.*/socks5 $HOST_IP 7890/g\" /etc/proxychains4.conf"
fi

### User Configuration END

